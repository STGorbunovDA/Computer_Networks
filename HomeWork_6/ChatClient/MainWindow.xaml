<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Button x:Name="btnConnectDisconnect" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Width="175" Height="50"/>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Margin="205,14,0,0" TextWrapping="Wrap" Text="Имя юзера" VerticalAlignment="Top" Width="569" Height="50"/>
        <ListBox x:Name="lbChat" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,70,10,155"/>
        <TextBox x:Name="tbMessege" HorizontalAlignment="Center" Margin="0,265,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="762" Height="125" KeyDown="TbMessege_KeyDown"/>

    </Grid>
</Window>
